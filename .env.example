# Environment variables for Ping Pong App
# Copy this file to .env and fill in your actual values

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_at_least_32_characters_long
JWT_EXPIRATION=86400000

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Application Config
APP_EMAIL_FROM=noreply@pingpongapp.com
APP_BASE_URL=http://localhost:4200

# Domain restriction (set to true for production)
DOMAIN_RESTRICTION_ENABLED=false
ALLOWED_DOMAINS=yourcompany.com,example.com
INVITATION_CODE_EXPIRY_DAYS=30
REQUIRE_EMAIL_VERIFICATION=true
EMAIL_VERIFICATION_TOKEN_EXPIRY_HOURS=24

# Password reset
RESET_TOKEN_EXPIRY_MINUTES=30

# Elo configuration
ELO_CURVE_ENABLED=true
ELO_CURVE_UPPER_THRESHOLD=1600
ELO_CURVE_LOWER_THRESHOLD=800
ELO_CURVE_GAIN_BOOST_FACTOR=1.2
ELO_CURVE_LOSS_REDUCTION_FACTOR=0.8

# Database (for production deployment)
# DATABASE_URL=jdbc:postgresql://your-rds-endpoint:5432/pingpongdb
# DATABASE_USERNAME=your-db-username
# DATABASE_PASSWORD=your-db-password

# AWS Configuration (for deployment)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key